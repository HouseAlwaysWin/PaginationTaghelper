@model CustomerPaginationViewModel

<br />

<form asp-controller="Home" asp-action="CustomQuery" method="get">
    <div class="input-group">
        <select name="searchby" class="selectpicker" data-width="5%" data-style="btn-success">
            <option value="Id">Id</option>
            <option value="Name">Name</option>
        </select>
        <input type="text" class="form-control" name="searchItem" placeholder="Search.." id="search_key" value="" style="max-width: 100%;">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </div>
</form>


<br />



<div class="bg-primary panel-body">
    <h4>Customers</h4>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Id
                @if (!Model.QueryObj.IsSortAscending)
                {
                    <a href="@Url.Action("CustomQuery",
                                                     new
                                                     {
                                                         page = Model.PagingObj.Page,
                                                         searchby = Model.QueryObj.SearchBy,
                                                         searchItem= Model.QueryObj.SearchItem,
                                                         sortby = "Id",
                                                         IsSortAscending =true
                                                     })">

                        <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true"></span>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("CustomQuery",
                                new
                                {
                                    page = Model.PagingObj.Page,
                                    searchby = Model.QueryObj.SearchBy,
                                    searchItem = Model.QueryObj.SearchItem,
                                    sortby = "Id",
                                    IsSortAscending =false
                                })">

                        <span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true"></span>
                    </a>
                }
            </th>
            <th>
                Name
                @if (!Model.QueryObj.IsSortAscending)
                {
                    <a href="@Url.Action("CustomQuery",
                                                  new
                                                  {
                                                      page = Model.PagingObj.Page,
                                                      sortby = "Name",
                                                      IsSortAscending = true,
                                                      searchby = Model.QueryObj.SearchBy,
                                                      searchItem = Model.QueryObj.SearchItem
                                                  })">
                        <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true"></span>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("CustomQuery", new
                            {
                                page = Model.PagingObj.Page,
                                sortby = "Name",
                                IsSortAscending = false,
                                searchby = Model.QueryObj.SearchBy,
                                searchItem = Model.QueryObj.SearchItem
                            })">
                        <span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true"></span>
                    </a>
                }
            </th>
        </tr>
    </thead>

    <tbody>
        @if (Model.TotalItems == 0)
            {
            <tr>
                <td>
                    <h1>
                        No Customer Found
                    </h1>
                </td>
            </tr>
        }
        else
        {
            @foreach (var customer in Model.Items)
                {
                <tr>
                    <td>
                        @customer.Id
                    </td>
                    <td> @customer.Name </td>
                </tr>
            }
        }
    </tbody>
</table>

<a href="@Url.Action("CustomQuery", new { showall = true })" class="btn btn-primary">Show All Users</a>



<pagination paging-model="@Model.PagingObj"
            total-items="@Model.TotalItems"
            active-custom-query-options="true"
            page-query-list="@Model.QueryOptions"
            page-action="CustomQuery"
            page-controller="Home">
</pagination>
